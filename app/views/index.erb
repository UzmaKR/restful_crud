<div class="container">
  <h1>Welcome to Evernotes!</h1>

  <table style="border: 1px solid black;">
    <tr>
      <th> </th>
      <th><b>Note Title</b></th>
      <th><b>Note Description</b></th>
      <th> </th>
      <th></th>
    </tr>
    <% Note.all.each_with_index do |note,index| %>
      <tr>
        <td><%= index +1  %>.  </td>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><a href="/notes/<%= note.id %>">Edit</a></td>
        <td><form action="/notes/destroy/<%= note.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input class="delete_me" type="submit" value="Delete">
      </form></td>
      </tr>
    <% end %>
  </table>
  </br></br>
  <form action='/notes' method='get'>
    <input type="submit" value="Create a new post">
  </form>

</div>
